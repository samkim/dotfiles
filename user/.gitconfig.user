[user]
  name = Sam Kim
  email = samkim@gmail.com

[alias]
  ap = add --patch
  ai = add --interactive
  wip = commit -n -m wip
  bl = branch --sort=-committerdate
  p = pull --rebase

[core]
  pager = delta

[delta]
  syntax-theme = Solarized (dark)

[interactive]
  diffFilter = delta --color-only
